{
  "manifest_version": 3,
  "name": "LostKit Lite",
  "version": "1.0",
  "description": "A lightweight toolkit for Lost City game",
  
  "permissions": [
    "storage",
    "tabs",
    "windows",
    "sidePanel"
  ],
  
  "action": {
    "default_title": "LostKit Lite",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "host_permissions": [
    "https://2004.lostcity.rs/*",
    "https://irc.losthq.rs/*",
    "https://lostcity.rs/*",
    "https://razgals.github.io/*",
    "https://lostcity.markets/*",
    "https://2004.losthq.rs/*"
  ]
}